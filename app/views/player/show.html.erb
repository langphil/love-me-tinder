<div class="container">
  <div class="col">
    <h1>LoveMeTinder</h1>
    <h3> Welcome <%= @player.name %> </h3>
  </div>
  <div class="col">
    <div class="card" style="width: 20rem;">
      <% if @player.gender == "female" %>
        <img class="card-img-top" src="http://i.imgur.com/62H2Wwp.png" alt="Character">
      <% elsif @player.gender == "male" %>
        <img class="card-img-top" src="http://i.imgur.com/4lJ7WXS.png" alt="Character">
      <% else %>
        <img class="card-img-top" src="https://assets-cdn.github.com/images/modules/logos_page/Octocat.png" alt="Character">
      <% end %>
      <div class="card-body">
        <strong><p class="card-text"> <%= @player.name %>, <%= @player.age %> </p></strong>
      </div>
    </div>
  </div>
  <div class="col" style="padding-top:10px">
    <a class="btn btn-primary" href="/crush/new" role="button">Start Swiping</a>
  </div>
</div>
